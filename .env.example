# Momentum MVP Environment Variables
# Copy this file to .env.local and fill in your actual values

# ===========================
# Database (Supabase)
# ===========================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===========================
# Authentication (Clerk)
# ===========================
# Get these from your Clerk dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key
CLERK_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===========================
# AI Services (OpenAI)
# ===========================
# Get this from your OpenAI account
OPENAI_API_KEY=sk-your-openai-api-key

# ===========================
# Web3 & Blockchain
# ===========================
# Get this from Alchemy dashboard
NEXT_PUBLIC_ALCHEMY_API_KEY=your-alchemy-api-key

# Get this from WalletConnect dashboard
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# Get this from ZeroDev dashboard
NEXT_PUBLIC_ZERODEV_PROJECT_ID=your-zerodev-project-id

# ===========================
# Application URLs
# ===========================
# Your application's base URL (for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================
# Optional: Development Settings
# ===========================
# Set to 'development' for local development
NODE_ENV=development

# Set to 'true' to enable debug logging
DEBUG=false
